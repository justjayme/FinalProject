<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/sides1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Prep. Time: XYZ"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cook. Time: XYZ"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_weight="2"
            android:text="Ingredients"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="22sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="90dp"
            android:layout_weight="2"
            android:text="Method"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="22sp"
            android:textStyle="italic" />

</LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_weight="2"
            android:text='• 900g Minced Beef\n• 2 Large Carrots\n• 2 Large Potatoes\n• 1 Large Onion\n• 500g Shortcrust Pastry\n• 1 Beef Stock Cube\n• 2TBSP Flour\n• 1 Egg\n• Salt and pepper\n'
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_weight="2"
            android:text="1. Brown mince,carrots, potatoes and onion until all are cooked. Add salt and pepper\n 2. Add flour and simmer for 5 mins\n 3. Add the stock and cook until thickened\n 4. Season to taste\n5. Let cool\n6. Roll out pastry and cut circles\n7. Brush edges w/ beaten egg\n8. Put a fullspoon of filling into the centre\n9. Fold over and using a fork seal the edges\n10.Brush with egg wash and bake @170 for 15-20 minutes\n"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    </LinearLayout>






</LinearLayout>
